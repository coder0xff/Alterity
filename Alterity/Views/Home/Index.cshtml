@{
    ViewBag.Title = "Alterity:";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                To learn more about Alterity, see the <a href="~About" title="About">About</a> page.
            </p>
        </div>
    </section>
}
@if (!ViewBag.IsAnonymousUser)
{
    <div>
        <h2>Your documents:</h2>
        <div class="document-link-list">
            <a href="~/Document/Create" class="document-link document-new-link">
                <img src="~/Images/document-new.svg" /><span>Create a new document</span>
            </a>
            @foreach (Alterity.Models.Document document in ViewBag.UserDocuments)
            {
                <a href="~/Document/Edit/@document.Id.ToString()" class="document-link">
                    <img src="~/Images/document-generic.svg" /><span>@document.Title</span>
                </a>
            }
        </div>
    </div>
}
